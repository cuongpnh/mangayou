<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlLocationMainMenu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/main_pressed" >

        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/ivLocationMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tvLocationMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivLocationMainMenu"
            android:text="@string/common_source"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvCurrentMangaSourceMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tvLocationMainMenu"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </RelativeLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlLocationMainMenu"
        android:layout_marginBottom="30dp" />

    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/common_copy_right_owner" />

</RelativeLayout><!-- From: file:/Volumes/Work/AndroidStudio/project/me/mangayou/app/src/main/res/layout/fragment_main_menu_left.xml -->