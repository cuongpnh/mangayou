<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rlLocationSelectMainMenu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/abs__ab_stacked_solid_dark_holo" >

        <Button
            android:id="@+id/btnBackMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-5dp"
            android:background="@drawable/main_pressed"
            android:drawableLeft="@drawable/ic_action_back"
            android:paddingRight="5dp"
            android:text="@string/app_name"
            android:textColor="@android:color/white" />

        <AutoCompleteTextView
            android:id="@+id/actvSearchInput"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/btnBackMainMenu"
            android:background="@drawable/abs__ab_solid_light_holo"
            android:hint="@string/common_search_manga_search"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:textSize="14sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lvMangaSource"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlLocationSelectMainMenu" />

</RelativeLayout><!-- From: file:/Volumes/Work/AndroidStudio/project/me/mangayou/app/src/main/res/layout/fragment_search_manga_source.xml -->